%h1 Listing blogs
= render 'search'
%table
  %tr
    %th Name
    %th Title
    %th Article
    %th
    %th
    %th
  - @blogs.each do |blog|
    %tr
      %td= blog.name
      %td= blog.title
      %td= blog.created_at
      %td= blog.article
      %td= link_to 'Show', blog
      %td= link_to 'Edit', edit_blog_path(blog)
      %td= link_to 'Destroy', blog, confirm: 'Are you sure?', method: :delete
%br/
= link_to 'New Blog', new_blog_path
= will_paginate @pages
